<p style="color: green"><%= notice %></p>

<%= render @fornecedor %>

<div>
  <%= link_to "Editar", edit_fornecedor_path(@fornecedor), class: "btn btn-warning" %> |
  <%= link_to "Voltar", fornecedores_path, class: "btn btn-default" %>

  <%= button_to "Apagar", @fornecedor, class: "btn btn-danger", method: :delete, form: { style: "display:inline", onsubmit: "return confirm('Tem certeza que deseja apagar?')" } %>
</div>
