
<form action="<%= carro.new_record? ? carros_criar_path : carros_alterar_path(carro) %>" method="POST">

    <% if carro.errors.any? %>
        <div style="color: red">
            <h2>
            Cont√©m <%= carro.errors.count %> erro(s) para ser resolvidos abaixo:
            </h2>

            <ul>
            <% carro.errors.each do |error| %>
                <li><%= error.full_message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <% unless carro.new_record? %>
        <input type="hidden" name="_method" value="put" />
    <% end %>
    
    <div><strong>Nome</strong>: <input type="text" value="<%= carro.nome %>" name="nome"> </div>
    <div><strong>Modelo</strong>: <input type="text" value="<%= carro.modelo %>" name="modelo"></div>
    <div><strong>Ano</strong>: <input type="text" value="<%= carro.ano %>" name="ano"></div>

    <hr>
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a href="/carros" class="btn btn-warning">Voltar para a lista</a>
</form>

